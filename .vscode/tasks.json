{
	"version": "2.0.0",
    "type": "process",
    "problemMatcher": [],
    "presentation": {
        "panel": "shared",
        "clear": false
    },
    "options": {
        "cwd": "${fileDirname}/.."
    },
	"tasks": [
        {
            "label": "Cpp: configure",
            "command": "conf.bat",
            "options": {
                "cwd": "${workspaceFolder}/Cpp"
            }
        },
        {
            "label": "Cpp: build",
            "command": "build.bat",
            "options": {
                "cwd": "${workspaceFolder}/Cpp"
            },
            "problemMatcher": []
        },
        {
            "label": "Rust: build active project",
            "group": "build",
            "command": "cargo.exe",
            "args": [
                "build"
            ]
        },
        {
            "label": "Rust: run active project",
            "command": "cargo.exe",
            "args": [
                "run"
            ],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            }
        }
    ]
}