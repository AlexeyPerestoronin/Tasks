{
    // "Clangd Language Serrver"-extension adjustments
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.restartAfterCrash": true,
    "clangd.fallbackFlags": [
        "-I${workspaceFolder}/build/_deps/googletest-src/googletest/include",
        "-I${workspaceFolder}k/build/_deps/googletest-src/googlemock/include",
        // specify the C++ standard to use
        "--std=c++17"
    ],
    "clangd.arguments": [
        // quantity of parallel workers
        "-j=2",
        // show in outpot only error-messages
        "--log=error",
        // pretty pring a json-output
        "--pretty",
        // launch indexing in background
        "--background-index",
        // never insert headers to solve symbols mistake found problem
        "--header-insertion=never",
        // full path to the code build directory
        "--compile-commands-dir=build"
    ],
    // "clang-format"-extension adjustments
    "clang-format.style": "${workspaceFolder}/.clang-format",
    // "C++ TestMate"-extension adjustments
    "testMate.cpp.test.executables": "${workspaceFolder}/build/*.exe",
    "testMate.cpp.debug.configTemplate": "name:TestMate: Debug",
    "cSpell.words": [
        "letcode",
        "nums"
    ],
    "files.associations": {
        "algorithm": "cpp",
        "any": "cpp",
